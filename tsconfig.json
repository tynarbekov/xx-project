{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "build",
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es6",
      "es7",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "rootDirs": [
      "./src"
    ],
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "typeRoots": [
      "node_modules/@types"
    ],
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "build",
    "webpack.**"
  ]
}